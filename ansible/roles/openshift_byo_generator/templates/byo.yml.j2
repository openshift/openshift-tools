template_service_broker_selector={'type': 'infra'}

{# template_service_broker options are passed in via the obg_template_service_broker_variables variable #}
{% for option, value in obg_template_service_broker_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}
{% else %}
openshift_template_service_broker_install=false
{# END Openshift Registry #}
{% endif %}

# Openshift Prometheus
{% if obg_install_openshift_prometheus %}
openshift_hosted_prometheus_deploy=true
l_openshift_prometheus_node_exporter_image_prefix={{ obg_registry_host }}/openshift3/

{# openshift_prometheus options are passed in via the obg_openshift_prometheus_variables variable #}
{% for option, value in obg_openshift_prometheus_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}
{% else %}
openshift_hosted_prometheus_deploy=false
{# END Openshift Registry #}
{% endif %}

# Openshift Management (CloudForms)
{% if obg_install_openshift_management %}
openshift_management_install_management=true

{# openshift_management options are passed in via the obg_openshift_management_variables variable #}
{% for option, value in obg_openshift_management_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}
{% else %}
openshift_management_install_management=false
{# END Openshift Registry #}
{% endif %}

# Openshift Logging
{% if obg_install_logging %}
openshift_hosted_logging_deploy=true
openshift_logging_install_logging=true
openshift_hosted_logging_elasticsearch_cluster_size=2
openshift_hosted_logging_deployer_version=v{{ obg_install_version_short }}
openshift_logging_image_version=v{{ obg_install_version_short }}
openshift_logging_image_prefix={{ obg_registry_host }}/openshift3/

{# logging options are passed in via the obg_logging_variables variable #}
{% for option, value in obg_logging_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}

{# cert files come in separately #}
openshift_logging_kibana_cert={{ obg_logging_kibana_cert }}
openshift_logging_kibana_key={{ obg_logging_kibana_key }}
openshift_logging_kibana_ca={{ obg_logging_kibana_ca }}
{% else %}
openshift_hosted_logging_deploy=false
{# END Openshift Logging #}
{% endif %}

# Openshift Metrics
{% if obg_install_metrics %}
openshift_hosted_metrics_deploy=true
openshift_metrics_install_metrics=true
openshift_hosted_metrics_storage_kind=dynamic
openshift_metrics_image_prefix={{ obg_registry_host }}/openshift3/

{# metrics options are passed in via the obg_metrics_variables variable #}
{% for option, value in obg_metrics_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}

openshift_metrics_image_version=v{{ obg_install_version_short }}
openshift_metrics_hawkular_ca={{ obg_metrics_hawkular_ca }}
openshift_metrics_hawkular_cert={{ obg_metrics_hawkular_cert }}
openshift_metrics_hawkular_key={{ obg_metrics_hawkular_key }}
{% else %}
openshift_hosted_metrics_deploy=false
{# END Openshift Metrics #}
{% endif %}

{# ELB configuration comes in via obg_infra_aws_elb_dict #}
{% if obg_scale_infra_elbs %}
openshift_aws_elb_dict={{ obg_infra_aws_elb_dict }}
{% endif %}
{# END ELB configuration #}


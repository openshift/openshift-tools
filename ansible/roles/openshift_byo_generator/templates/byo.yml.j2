{{option}}={{value}}
{% endfor %}
{% else %}
openshift_ansible_service_broker_install=false
{# END Openshift Registry #}
{% endif %}

# Openshift Openshift Service Catalog
{% if obg_install_openshift_service_catalog %}
openshift_enable_service_catalog=true
openshift_service_catalog_image_prefix={{ obg_registry_host }}/openshift3/ose-

{# openshift_service_catalog options are passed in via the obg_openshift_service_catalog_variables variable #}
{% for option, value in obg_openshift_service_catalog_variables.iteritems() %}
{{option}}={{value}}
{% endfor %}
